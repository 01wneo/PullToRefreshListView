    android:gravity="center"
    android:layout_gravity="center"
    >
    <ProgressBar
         android:id="@+id/pb_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/pb_bg"
        />
